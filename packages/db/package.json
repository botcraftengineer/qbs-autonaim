{
  "name": "@qbs-autonaim/db",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "default": "./src/index.ts"
    },
    "./client": {
      "default": "./src/client.ts"
    },
    "./client.ws": {
      "default": "./src/client.ws.ts"
    },
    "./schema": {
      "default": "./src/schema/index.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc",
    "drop": "bun with-env bun src/scripts/drop-schema.ts",
    "reset-db": "bun with-env bun src/scripts/drop-schema.ts",
    "format": "biome format .",
    "lint": "biome lint .",
    "check": "biome check .",
    "push": "bun with-env drizzle-kit push",
    "studio": "bun with-env drizzle-kit studio",
    "migrate:create": "bun with-env drizzle-kit generate",
    "migrate": "bun with-env drizzle-kit migrate",
    "generate-key": "bun with-env bun src/scripts/generate-encryption-key.ts",
    "set-admin": "bun with-env bun src/scripts/set-admin-role.ts",
    "setup": "bun with-env bun src/scripts/setup-uuid-v7.ts",
    "migrate-workspaces": "bun with-env bun src/scripts/migrate-to-workspaces.ts",
    "migrate-company": "bun with-env bun src/scripts/migrate-company-settings.ts",
    "migrate-conversations": "bun with-env bun src/scripts/migrate-telegram-conversations.ts",
    "migrate-messages": "bun with-env bun src/scripts/migrate-telegram-messages.ts",
    "migrate-all": "bun with-env bun src/scripts/migrate-all.ts",
    "migrate-server": "bun with-env bun src/scripts/migrate-server.ts",
    "migrate-server-dump": "bun with-env bun src/scripts/migrate-server-dump.ts",
    "migrate-workspace": "bun with-env bun src/scripts/migrate-workspace.ts",
    "migrate-orgs": "bun with-env bun src/scripts/migrate-to-organizations.ts",
    "fix-workspace-slugs": "bun with-env bun src/scripts/fix-workspace-slug-uniqueness.ts",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "bun run --env-file ../../.env"
  },
  "dependencies": {
    "@qbs-autonaim/config": "workspace:*",
    "@qbs-autonaim/validators": "workspace:*",
    "@sindresorhus/slugify": "^3.0.0",
    "@vercel/postgres": "0.10.0",
    "drizzle-orm": "0.45.1",
    "drizzle-zod": "0.8.3",
    "nanoid": "^5.1.6",
    "pg": "^8.16.3",
    "ws": "^8.18.3",
    "zod": "4.2.1"
  },
  "devDependencies": {
    "@qbs-autonaim/tsconfig": "workspace:*",
    "@types/pg": "^8.16.0",
    "@types/ws": "^8.18.1",
    "drizzle-kit": "^0.31.8",
    "postgres": "^3.4.7",
    "typescript": "5.9.3"
  }
}
